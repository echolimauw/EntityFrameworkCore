<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
@using CRUDelicious.Models
@model Dish
    <div class="container">
        <div class="toptitle">
            <a href="/">Home</a>
            <h2>Edit @Model.Name</h2>
        </div>
        <div class="editform">
            <div class="form">
            <form action="/update/@Model.DishId" method="post">
            <!-- <form asp-action="UpdateDish" asp-controller="Home" method="post"> -->
                <span asp-validation-for="Name"></span>
                <label asp-for="Name">Dish Name: </label>
                <input asp-for="Name"/>
                <span asp-validation-for="Chef"></span>
                <label asp-for="Chef">Chef's Name: </label>
                <input asp-for="Chef"/>
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness">Tastiness: </label>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories">Calories: </label>
                <input asp-for="Calories"/>
                <span asp-validation-for="Description"></span>
                <label asp-for="Description">Description: </label>
                <input asp-for="Description"/>
                <button asp-for="UpdateDish">Update</button>
            </form>
        </div>
        </div>
    </div>
</body>
</html>